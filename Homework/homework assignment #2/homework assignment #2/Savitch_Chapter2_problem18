#include <iostream>

using namespace std;

/*
 * 
 */
int main(int argc, char** argv) {
    int x, y;
    float q, r;
    cout << "enter two integers in decreasing order:";
    cin >> x >> y;
    q= x/y;
    cout << "x divided by y equals:" << q << endl;
    r=x%y;
    cout << "the remainder of x/y is:" << r << endl;
    

    return 0;
}

