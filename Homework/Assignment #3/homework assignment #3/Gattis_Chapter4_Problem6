// system libraries
#include <iostream>

using namespace std;

/*
 * 
 */
// execution starts here
int main(int argc, char** argv) {
    // declare variables
    int mass; 
    float wT; // wT= weight
    cout << "enter mass of an object in kilograms: ";
    cin >> mass;
    // calculations
    wT=mass*9.8;
    // output results
    cout << "the weight of the object is:  " << wT << " newtons" << endl;
    // restrictions
    if (wT<10) {
        cout << "the mass that you entered was too low";
    }
    if (wT>1000) {
        cout << "the mass that you entered was too high";
    }

    return 0;
}

